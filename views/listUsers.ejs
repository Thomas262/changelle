<h2>Lista usuarios</h2>
<ul>
  <% users.forEach(user => { %>
    <li>
      <strong>Nombre:</strong> <%= user.name %><br>
      <strong>Email:</strong> <%= user.email %><br>
      <% if (user.rol === 2) { %>
        <strong>Rol:</strong> Administrador<br>
      <% } else if (user.rol === 1) { %>
        <strong>Rol:</strong> Espectador<br>
      <% } else { %>
        <strong>Rol:</strong> <%= user.rol %><br>
      <% } %>
      <strong>Creado en:</strong> <%= user.created_at %><br>
      <strong>Actualizado en:</strong> <%= user.updated_at %>
      
      <!-- Botón de eliminar -->
      <form action="/usuarios/<%= user.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Eliminar</button>
      </form>
      
      <!-- Botón de editar -->
      <form action="/user/<%= user.id %>/editar" method="GET">
        <button type="submit">Editar</button>
      </form>
    </li>
  <% }); %>
</ul>
